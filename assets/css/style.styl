	margin-bottom: 10px
	&::after
		position: absolute
		content: " "
		bottom: -5px
		width: 100%
		height: 1px
		left: 0
		right: 0
		border-top: 1px solid rgba(0, 0, 0, .2)
.underline.white
	&::after
		border-top: 1px solid #fff
.a-link
	position: relative
	display: inline-block
	color: #fff
	font-weight: 700
	&::after, &::before
		position: absolute
		content: ' '
		left: 0
		right: 0
		margin: 0 auto
		width: 0
		height: 2px
		background: #fff
		-webkit-transition: all .25s
		   -moz-transition: all .25s
		    -ms-transition: all .25s
		     -o-transition: all .25s
		        transition: all .25s
