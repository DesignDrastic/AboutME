.underline-zigzag
	position: relative
	z-index: 1
	cursor: pointer
	display: inline-block
	&::after
		position: absolute
		content: ' '
		top: 100%
		left: 0
		right: 0
		width: 100%
		height: 40px
		background: url('../img/zigzag.png')
		background-size: 60px
		background-repeat: repeat-x
		z-index: -1
	&:hover::after
		animation: zigzagAnimate 2s linear infinite

@keyframes zigzagAnimate
	0%
		background-position: 0% 0%
	100%
		background-position: 100% 0%

.hamburger
	position: absolute
	width: 50px
	height: 30px
	right: 20px
	top: 20px
	z-index: 999
	cursor: pointer
	.hamburger__menu
		span
			position: absolute
			content: " "
			width: 100%
			height: 3px
			background: #6c6c6c
			left: 0
			border-radius: 25px
			-webkit-transition: all .5s
			   -moz-transition: all .5s
			    -ms-transition: all .5s
			     -o-transition: all .5s
			        transition: all .5s
			&:first-child
				transform-origin: left
				-webkit-transform: translateY(0)
				   -moz-transform: translateY(0)
				    -ms-transform: translateY(0)
				     -o-transform: translateY(0)
				        transform: translateY(0)
			&:nth-child(2)
				-webkit-transform: translateY(15px)
				   -moz-transform: translateY(15px)
				    -ms-transform: translateY(15px)
				     -o-transform: translateY(15px)
				        transform: translateY(15px)
			&:last-child
				transform-origin: left
				-webkit-transform: translateY(30px)
				   -moz-transform: translateY(30px)
				    -ms-transform: translateY(30px)
				     -o-transform: translateY(30px)
				        transform: translateY(30px)
.hamburger.active
	.hamburger__menu
		span
			cursor: pointer
			background: #ccc
			&:first-child
				width: 40%
				-webkit-transform: rotate(-45deg) translate(-10px, 10px)
				   -moz-transform: rotate(-45deg) translate(-10px, 10px)
				    -ms-transform: rotate(-45deg) translate(-10px, 10px)
				     -o-transform: rotate(-45deg) translate(-10px, 10px)
				        transform: rotate(-45deg) translate(-10px, 10px)
			&:last-child
				width: 40%
				-webkit-transform: rotate(45deg) translate(12px, 10px)
				   -moz-transform: rotate(45deg) translate(12px, 10px)
				    -ms-transform: rotate(45deg) translate(12px, 10px)
				     -o-transform: rotate(45deg) translate(12px, 10px)
				        transform: rotate(45deg) translate(12px, 10px)
