$sidebar_width = 400px
$primary-ff = "Noto Sans SC", sans-serif
$clr-primary = #cc2b5e

::-moz-selection
	color: #fff
	background: #2c2c2c
::selection
	color: #fff
	background: #2c2c2c

html
	height: 100vh
	overflow: hidden
body
	font-family: "Noto Sans SC", sans-serif
.d-n
	display: none!important
.m-0
	margin: 0
.p-0
	padding: 0
[data-scrollbar]
	display: inherit !important
	position: absolute !important
.content
	position: relative
.sidebar
	width: $sidebar_width
	float: left
	height: 100vh
	border-right: 1px solid #ccc
	z-index: 3
	overflow: hidden
	.sticky-sidebar
		position: fixed
		overflow: hidden
		width: $sidebar_width
		height: 100%
		background: #fff
		z-index: 9
		-webkit-transition: all .5s linear
		   -moz-transition: all .5s linear
		    -ms-transition: all .5s linear
		     -o-transition: all .5s linear
		        transition: all .5s linear
		&::after
			position: absolute
			content: " "
			top: 0
			bottom: 0
			left: 0
			right: 0
			background-blend-mode: overlay
			background: url('../texture-patterns/memphis-colorful.png'), rgba(255, 255, 255, 0.4)
			z-index: -1
.about-me
	position: fixed
	display: inline-block
	padding: 10px
	background-color: #cc2b5e
	background-image: -webkit-linear-gradient(55deg, #cc2b5e, #753a88)
	background-image: -o-linear-gradient(55deg, #cc2b5e, #753a88)
	background-image: linear-gradient(145deg, #cc2b5e, #753a88)
	font-family: $primary-ff
	font-weight: 600
	cursor: pointer
	color: #fff
	margin: 15px
	border-radius: 2px
	-webkit-transition: all .25s
	   -moz-transition: all .25s
	    -ms-transition: all .25s
	     -o-transition: all .25s
	        transition: all .25s
	z-index: 99999
	&:hover
		-webkit-transform: scale(1.1)
		   -moz-transform: scale(1.1)
		    -ms-transform: scale(1.1)
		     -o-transform: scale(1.1)
		        transform: scale(1.1)

.me-avatar
